<p style="color: green"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-1 mt-5 ">
      <%= form_with(url: users_path, method: :get, data: {controller: "search-form", turbo_frame: "bands", turbo_action: "advance"}) do |form| %>
        <%= form.label :query, "Search by name,location:", class: "block mb-2" %>
        <div>
        <%= form.text_field :query %>

        <%= form.submit 'Search'%>
      </div>
      <% end %>
    </div>
    <div class="col-lg-11">
      <div class="col text-center"><h1>Search user </h1></div>
        <div class="col" align='right'><%= link_to "New user", new_user_path, class:'btn btn-primary' %></div>
      <div class="col-lg-10 mx-auto mt-5">
        <div class="row mt-4 mb-4">
      <%@users.each do |user| %>
      <div class="col-lg-3 mt-3 mb-3">
        <div class="card text-center shadow">
          <div class="user-info">
            <%= render user %>
            <p class="lead">
              <%= user.location %><br>
            </p>
          </div>
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

    